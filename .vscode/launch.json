{
    "version": "0.2.0",
    "configurations":
    [
        {
            "type": "gdb",
            "name": "(jlink) Remote Debug",
            "request": "attach",
            "executable": "${input:pickBinaryFile}",
            "target": ":2331",
            "cwd": "${workspaceRoot}",
            "remote": true
        },
        {
            "type": "cppdbg",
            "name": "(gdb) C++ Server Debug",
            "request": "launch",
            "program": "install/ros2-debug/nxt_drivers/lib/nxt_drivers/driver_node",
            "miDebuggerServerAddress": "localhost:3000",
            "cwd": "${workspaceRoot}",
        },
    ],
    "inputs":
    [
        {
            "id": "pickBinaryFile",
            "type": "command",
            "command": "extension.commandvariable.file.pickFile",
            "args":
            {
                "description": "Pick a binary file"
            } 
        } 
    ]
}